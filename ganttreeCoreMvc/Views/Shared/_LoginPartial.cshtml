@using Microsoft.AspNetCore.Identity
@using ganttreeCoreMvc.Data.Entities

@inject SignInManager<StoreUser> SignInManager
@inject UserManager<StoreUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <ul class="loggedin">
        <li>
            <a>@ViewBag.pagetitle</a>
        </li>
        <li>
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="signin">
        <li>
            <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>

}

